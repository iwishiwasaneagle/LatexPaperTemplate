{
    "[latex]": {
        "editor.formatOnPaste": true,
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 80,
        "editor.formatOnSave": true
    },
    "latex-workshop.intellisense.citation.backend": "biblatex",
    "latex-workshop.latex.outDir": "build",
    "latex-workshop.latex.clean.command": "latexmk",
    "latex-workshop.latex.clean.args": [
        "-C"
    ],
    "latex-workshop.formatting.latex": "tex-fmt",
    "latex-workshop.formatting.tex-fmt.path": "/opt/tex-fmt/tex-fmt",
    "latex-workshop.formatting.tex-fmt.args": [
        "--nowrap", "--tabsize", "4"
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk 1Ô∏è‚É£",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk üîÉ",
            "tools": [
                "latexmk",
                "latexmk",
                "biber",
                "makeindex",
                "latexmk"
            ]
        },
        {
            "name": "biber 1Ô∏è‚É£",
            "tools": [
                "biber"
            ]
        },
        {
            "name": "makeindex 1Ô∏è‚É£",
            "tools": [
                "makeindex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "-output-directory=%OUTDIR%",
                "%DOCFILE_EXT%"
            ]
        },
        {
            "name": "biber",
            "command": "biber",
            "args": ["--output-directory=%OUTDIR%", "%DOCFILE%"],
            "env": {}
        },
        {
            "name": "makeindex",
            "command": "makeindex",
            "args": [
                "%OUTDIR%/%DOCFILE%.nlo",
                "-s",
                "nomencl.ist",
                "-o",
                "%OUTDIR%/%DOCFILE%.nls"
            ],
            "env": {}
        },
    ],
    "latex-workshop.latex.watch.files.ignore": [
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.idx",
        "**/*.ind",
        "**/*.lof",
        "**/*.lot",
        "**/*.out",
        "**/*.toc",
        "**/*.acn",
        "**/*.acr",
        "**/*.alg",
        "**/*.glg",
        "**/*.glo",
        "**/*.gls",
        "**/*.ist",
        "**/*.fls",
        "**/*.log",
        "**/*.nav",
        "**/*.snm",
        "**/*.fdb_latexmk",
        "**/*.synctex.gz",
        "**/*.run.xml",
        "**/*.nls"
    ],
    "latex-workshop.synctex.afterBuild.enabled": true,
    "vim.handleKeys": {
        "<C-p>": false
    }
}
